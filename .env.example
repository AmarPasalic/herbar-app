PORT=3000
JWT_SECRET=change_me_to_a_long_random_string
MONGODB_URI=mongodb://localhost:27017/herbar

# Cloudinary (optional, for image hosting in production like Vercel)
# If set, images will be uploaded to Cloudinary instead of local /uploads
# Either provide CLOUDINARY_URL or the three variables below
# CLOUDINARY_URL=cloudinary://<api_key>:<api_secret>@<cloud_name>
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# CORS allowed origins (comma separated), leave blank to allow all (dev)
CORS_ORIGIN=

# Rate limiting (auth endpoints)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
# Plant creation specific limit per hour
RATE_LIMIT_PLANT_CREATE_MAX=25

# Mongo connection tuning
MONGO_CONNECT_ATTEMPTS=3
